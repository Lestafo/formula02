<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" minHeight="200.0" minWidth="200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Telas.manutencao.PaisManutencaoController">
   <children>
      <Label text="Adicionar Cliente" />
      <HBox alignment="CENTER" prefHeight="42.0" prefWidth="200.0">
         <children>
            <Label alignment="CENTER" text="Nome" />
            <TextField fx:id="nomeField" prefHeight="25.0" prefWidth="122.0">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="20.0" top="5.0" />
               </padding>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="37.0" prefWidth="200.0">
         <children>
            <Label text="Endereco" />
            <TextField fx:id="enderecoField" prefHeight="25.0" prefWidth="134.0">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="69.0" prefHeight="37.0" prefWidth="200.0">
         <children>
            <Label text="Telefone" />
            <TextField fx:id="telefoneField" prefHeight="25.0" prefWidth="134.0">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="106.0" prefHeight="37.0" prefWidth="200.0">
         <children>
            <Label text="Cidade" />
            <ComboBox fx:id="cidadeField" prefWidth="150.0" />
         </children>
      </HBox>
      <HBox prefHeight="29.0" prefWidth="200.0" spacing="65.0">
         <children>
            <Button fx:id="botaoOk" mnemonicParsing="false" onAction="#adicionar" prefHeight="25.0" prefWidth="63.0" text="OK!">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" text="Cancelar" />
         </children>
         <padding>
            <Insets right="5.0" />
         </padding>
      </HBox>
   </children>
</VBox>
